
<div class="row">
  <div class=".col-md-6">
    <h1>Checkin for <%= @event.title %></h1>
  </div>
  <div class=".col-md-6">
    <%= form_tag(tickets_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Tickets" %>
      <%= submit_tag "Search", :name => nil %>
    <% end %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3">SKU</th>
      <th colspan="3">Email</th>
      <th colspan="3">Tier</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td colspan="3"><%= ticket.sku %></td>
        <td colspan="3"><%= ticket.delivery_email %></td>
        <td colspan="3"><%= ticket.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

